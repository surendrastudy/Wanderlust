<% layout("layouts/boilerPlate") %>

<div class="row mt-3 mb-3">
    <div class="row mt-3 mb-3">
        <div class="col-8 offset-3 mb-3" >
            <h3>User Bookings Details</h3>
        </div> 
    </div>

    <% if (listings instanceof Array) { %>
        <% listings.forEach(listing => { %>
            <div class="card custom-card col-6 offset-3 show-card">
                <% listing.bookings.forEach(booking => { %>
                    <div class="mb-3">
                        <b>UserName :</b>
                        <a href="/booking/userdetails/<%= listing._id %>?userId=<%= booking.user._id %>" class="ancor-tag"> <%= booking.user.username %></a> 
                    </div>
                <% }) %>
            </div>
        <% }) %>
    <% } else { %>
        <div class="col-8 offset-3 mb-3">
            <p>No bookings found</p>
        </div>
    <% } %>
</div>
